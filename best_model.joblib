import joblib
import streamlit as st
import os

@st.cache_resource
def load_model():
    try:
        if os.path.exists("best_model.joblib"):
            model = joblib.load("best_model.joblib")
            return model, "Loaded saved model"
        else:
            st.warning("Model file not found. Please train and save 'best_model.joblib'.")
            return None, "No model available"
    except Exception as e:
        st.error(f"Error loading model: {e}")
        return None, "Error"

